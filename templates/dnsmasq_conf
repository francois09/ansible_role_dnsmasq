## dnsmasq conf file created by Ansible for DNS forwarding
strict-order
no-hosts
pid-file={{ dnsmasq__pid_file }}
except-interface=lo
bind-dynamic
interface={{ dnsmasq__interface }}
resolv-file={{ dnsmasq__resolv_conf_file }}
neg-ttl={{ dnsmasq__neg_ttl }}
{% if dnsmasq__forward_max is defined %}
dns-forward-max={{ dnsmasq__forward_max }}
{% endif %}
{% if 'nameserver' in groups %}
{%   for dns in groups['nameserver'] %}
{%     if hostvars[dns]['ansible_default_ipv4']['address']|ipaddr(dnsmasq__network) %}
server={{ hostvars[dns]['ansible_default_ipv4']['address']|ipaddr(dnsmasq__network) }}
{%     endif %}
{%   endfor %}
{% endif %}
